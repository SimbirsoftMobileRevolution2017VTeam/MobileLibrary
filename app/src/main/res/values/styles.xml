<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DownUpActivity" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_from_left</item>
        <item name="android:activityOpenExitAnimation">@anim/pull_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/pull_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_from_left</item>
    </style>

</resources>
